<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="clr-namespace:VKR2025.ViewModel"
        x:DataType="vm:TestingViewModel"
        mc:Ignorable="d"  Width="410" Height="350"
        x:Class="VKR2025.MainWindow"
        Title="Главная"
		CanResize="False"
		WindowStartupLocation="CenterScreen">
	<Grid ShowGridLines="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="15"/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="15"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="15"/>
			<ColumnDefinition Width="7"/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition Width="7"/>
			<ColumnDefinition Width="15"/>
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="Добро пожаловать!" FontSize="24"  HorizontalAlignment="Center"/>
		<TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="Данная программа предназначена для измерения объема восприятия и кратковременной памяти." FontSize="18" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Grid.RowSpan="2" TextAlignment="Center"/>
		<Button Grid.Row="3" Grid.Column="2" Content="Начать тестирование" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="2" Width="320" Height="60" HorizontalContentAlignment="Center" Margin="0 0 0 0" VerticalContentAlignment="Center" FontSize="22" Background="#0067a5" Foreground="white"  Command="{Binding OpenRegistryCommand}"/>
		<!--<TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="Включает 5 этапов, занимает 20 минут" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 15 0 0"/>-->
		<Button Grid.Row="4" Grid.Column="2" Content="Об этапах теста" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.ColumnSpan="2" Width="140" HorizontalContentAlignment="Center" Margin="24 0 0 0" Background="#0067a5" Foreground="white" Height="40" VerticalContentAlignment="Center" FontSize="15"/>
		<Button Grid.Row="4" Grid.Column="2" Content="Результаты" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.ColumnSpan="2" Width="140" HorizontalContentAlignment="Center" Margin="0 0 24 0" Background="#0067a5" Foreground="white" Height="40" VerticalContentAlignment="Center" FontSize="15"/>
		<Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="7" Background="#0067a5"/>
		<Border Grid.Column="5" Grid.Row="0" Grid.RowSpan="7" Background="#0067a5"/>
		<Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4" Background="#0067a5"/>
		<Border Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="4" Background="#0067a5"/>
	</Grid>
</Window>
